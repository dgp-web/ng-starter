{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "es2015"
  },
  "exclude": [
    "bin",
    "wwwroot",
    "node_modules",
    "test.ts",
    "**/*.spec.ts"
  ]
}
